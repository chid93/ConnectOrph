<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Donation id (did) - will be HIDDEN - used to pass to other activity -->
    <TextView
        android:id="@+id/LT_donationid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        android:paddingTop="@dimen/feed_item_padding_top_bottom"  >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
            android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" >
            <TextView
                android:id="@+id/LT_timestamp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/timestamp"
                android:textSize="@dimen/feed_item_inner_elements"
                android:gravity="end" />
            <!--<TextView
                android:id="@+id/LT_timestamp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/timestamp"
                android:textSize="@dimen/feed_item_inner_elements"
                android:gravity="end" />-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:text="@string/claimCode"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/LT_claimCode"
                    android:paddingLeft="@dimen/feed_item_profile_info_padd"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="@dimen/feed_item_profile_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:text="@string/numberOfItems"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/LT_numOfItems"
                    android:paddingLeft="@dimen/feed_item_profile_info_padd"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="@dimen/feed_item_profile_name" />
            </LinearLayout>

            <TextView
                android:text="@string/materialType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_profile_name"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/LT_category"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_inner_elements"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />

            <TextView
                android:id="@+id/LT_subCategory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_inner_elements"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />

            <TextView
                android:text="@string/donateDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_profile_name"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/LT_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_child_rectangle_corner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom"
            android:layout_marginLeft="@dimen/feed_large_inner_item_padding_left_right"
            android:layout_marginRight="@dimen/feed_large_inner_item_padding_left_right"
            android:layout_marginTop="@dimen/feed_item_margin">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/feed_large_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" >

                <TextView
                    android:text="@string/orphanageContactLT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp" />


                <!-- <TextView
                    android:text="@string/phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp" />
                <TextView
                    android:text="@string/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp" /> -->

                <TextView
                    android:id="@+id/LT_orphName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                    android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />
                <TextView
                    android:id="@+id/LT_orphAddressLine1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                    android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />
                <TextView
                    android:id="@+id/LT_orphAddressLine2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                    android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                    android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" >
                    <TextView
                        android:id="@+id/LT_orphCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/LT_orphState"
                        android:paddingLeft="@dimen/feed_item_profile_info_padd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/LT_orphPhoneNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                    android:layout_marginRight="@dimen/feed_inner_item_padding_left_right"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>