<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/orphName_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fr_orph_1_scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/orphName_TV">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- <TextView
                android:id="@+id/orphName_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_profile_name"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" /> -->

            <TextView
                android:text="@string/missionSolo"
                android:textColor="@color/sa_dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_profile_name"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/orphMission_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />


            <TextView
                android:text="@string/orphanageContact"
                android:textColor="@color/sa_dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_profile_name"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:text="@string/phonePD"
                android:textColor="@color/sa_dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_inner_elements"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/orphPhoneNumber_TV"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right"/>

            <TextView
                android:text="@string/emailPD"
                android:textColor="@color/sa_dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_inner_elements"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/orphEmail_TV"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />

            <TextView
                android:text="@string/websitePD"
                android:textColor="@color/sa_dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_inner_elements"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/orphWebsite_TV"
                android:textStyle="bold"
                android:autoLink="web"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />

            <TextView
                android:text="@string/addressPD"
                android:textColor="@color/sa_dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/feed_item_inner_elements"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/orphAddress1_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />
            <TextView
                android:id="@+id/orphAddress2_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/feed_inner_item_padding_left_right"
                android:layout_marginRight="@dimen/feed_inner_item_padding_left_right" >
                <TextView
                    android:id="@+id/orphCity_TV"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/orphState_TV"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/feed_item_profile_info_padd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>