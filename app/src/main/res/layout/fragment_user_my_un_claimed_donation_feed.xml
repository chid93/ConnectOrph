<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@android:id/list"
        android:layout_above="@+id/fragment_user_my_un_claimed_donation_feed_footer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:id="@+id/fragment_user_my_un_claimed_donation_feed_footer"
        android:background="@drawable/ab_solid_bluewhite"
        style="@style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/fragment_user_my_un_claimed_donation_feed_buttonbar"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF"
            style="@style/ButtonBarButton"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/editButton" />

    </LinearLayout>

</RelativeLayout>